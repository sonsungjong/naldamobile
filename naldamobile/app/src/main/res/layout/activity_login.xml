<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_cafe"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".LoginActivity"
    android:id="@+id/login_cafe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_clogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:src="@drawable/login_clogo" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/login_cid"
            android:layout_marginBottom="30dp"/>

        <EditText
            android:id="@+id/ID"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginTop="-90dp"
            android:layout_marginLeft="90dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColor="@color/black"
            android:singleLine="true"
            android:textSize="20sp"
            android:paddingLeft="100dp"
            android:background="@null"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/login_cpw"
            android:layout_marginTop="20dp"/>


        <!-- 패스트워드 입력칸-->
        <EditText
            android:id="@+id/Password"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginTop="-60dp"
            android:layout_marginLeft="90dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColor="@color/black"
            android:singleLine="true"
            app:passwordToggleEnabled="true"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:paddingLeft="100dp"
            android:background="@null"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/signUpButton"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="#4b2c0a"
                android:fontFamily="@font/kopub"
                android:onClick="signUpBtn"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="24dp"
                app:cornerRadius="50dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/requestLogin"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/kopub"
                android:radius="90dp"
                android:text="Log in !"
                android:textColor="#4b2c0a"
                app:cornerRadius="50dp"
                android:textSize="24dp"
                android:textAllCaps="false"/>
        </LinearLayout>

        <TextView
            android:id="@+id/chatTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>