<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="50dp"
    app:cardBackgroundColor="@color/white"
    android:elevation="14dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="22dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/shop_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/shop1"
            />

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="날다카페 1호점"
            android:textAlignment="center"
            android:textColor="#091020"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shop_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.15" />

        <TextView
            android:id="@+id/address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경기도"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/shop_name"
            app:layout_constraintTop_toBottomOf="@+id/shop_name" />

        <TextView
            android:id="@+id/address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="군포시 군포첨단산업2로22번길5"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/address1"
            app:layout_constraintTop_toBottomOf="@+id/shop_name" />

        <TextView
            android:id="@+id/order_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문가능 |"
            android:textColor="#4CAF50"
            app:layout_constraintEnd_toEndOf="@+id/address1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/address1"
            app:layout_constraintTop_toBottomOf="@+id/address1" />

        <TextView
            android:id="@+id/reserve_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="| 예약불가능"
            android:textColor="#FF5722"
            app:layout_constraintStart_toEndOf="@+id/order_text"
            app:layout_constraintTop_toBottomOf="@+id/address1" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>